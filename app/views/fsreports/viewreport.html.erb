<% provide(:title, "Charts") %>
<div class="row">
<div class = "col-md-6 col-md-offset-3 ">
<h2> <%= @module%> Module Automation Report </h2>
<canvas id="myChart" width="200" height="200"></canvas><br><br>
</div>
</div>

<h2> <%= @module%> Module Failed Cases </h2>
<table class="table" id="failuredata">
  <thead class="head-inverse">
    <tr>
      <th>TestCase</th>
      <th>Failure Reason</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@failures.blank? %>
    <% @failures.each do |error| %>
        <% error.each do |err| %>
      <tr>
        <td><%= "#{err[0][1..-1]}" %></td>
          <td><%=  err[1] %> </td>
       </tr>
     <% end %>
     <% end %>
     <% end %>
  </tbody>
</table>
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ["Failed <%=@failed%>", "Passed <%=@passed%>"],
        datasets: [{
            label: ' Rishabh',
            data: [<%=@failed%>, <%=@passed%>],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)'
                
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)'
                
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
